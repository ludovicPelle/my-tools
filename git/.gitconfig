[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
	interactive = auto
[user]
	name = ludovic
	email = ludovic.pelle@iprotego.com
[alias]
	ci = commit
	ce = checkout
	st = status
    l = log
    last = "for-each-ref --sort=committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative) %(committerdate)%(color:reset))'"
	dsf = "!f() { [ -z \"$GIT_PREFIX\" ] || cd \"$GIT_PREFIX\" && git diff --color \"$@\" | diff-so-fancy  | less --tabs=4 -RFX; }; f"
	graph = log --graph --pretty=format:'%Cred%h%Creset -  %C(yellow)%d%Creset%<(60,trunc)%s%Cgreen(%cr) %C(bold blue)<%an>%Creset%n'

[merge]
	tool = vimdiff
[core]
	editor = vim
[color "branch"]
	current = yellow
	local = yellow
	remote = green
[color "diff"]
	meta = yellow
	frag = magenta
    old = cyan
	new = green
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[push]
	default = simple
[http]
	sslVerify = false
[url "https://"]
	insteadOf = git://
